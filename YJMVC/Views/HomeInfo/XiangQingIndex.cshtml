@model YJMVC.Models.HomeInfoModel
@using YJMVC.Models
@{
    ViewBag.Title = "房屋详细信息";
    Layout = "~/Views/Shared/_QianTaiView.cshtml";
    List<HomeInfoModel> homes = ViewBag.homes;
}

<div class="banner-section">
    <div class="container">
        <h2>房屋详细信息</h2>
    </div>
</div>
<!---banner--->
<div class="content">
    <div class="blog-section">
        <div class="container">
            <div class="blog-grids">
                <div class="col-md-9 blog-grid">
                    <div class="blog">
                        @if (Model.HomeInfo_InfoType == 1)
                        {
                            <h3>房屋的具体信息</h3>
                            <input id="Hidden1" value="@Model.HomeInfo_Id" type="hidden" />
                            <img src="/Images/@Model.HomeInfo_PhotoPath" alt="Alternate Text" />
                            <p>联系人：<span>@Model.HomeInfo_Contact</span></p>
                            <p>联系方式：<span>@Model.HomeInfo_Phone</span></p>
                            <p>房屋地点：<span>@Model.HomeInfo_PosiTion</span>@Model.HomeInfo_Xq_Name</p>
                            <p>房屋类型：<span>@Model.HomeInfo_Type</span></p>
                            <p>房型：<span>@Model.HomeInfo_HouseType</span></p>
                            <p>房屋面积：<span>@Model.HomeInfo_Area</span></p>
                            @:房屋信息：出售
                            <p>价格：<span>@Model.HomeInfo_Price</span></p>
                            <p>介绍：@Model.HomeInfo_IntroDuce</p>
                        }
                        else if (Model.HomeInfo_InfoType == 2)
                        {
                            <h3>房屋的具体信息</h3>
                            <input id="Hidden1" value="@Model.HomeInfo_Id" type="hidden" />
                            <img src="/Images/@Model.HomeInfo_PhotoPath" alt="Alternate Text" />
                            <p>联系人：<span>@Model.HomeInfo_Contact</span></p>
                            <p>联系方式：<span>@Model.HomeInfo_Phone</span></p>
                            <p>房屋地点：<span>@Model.HomeInfo_PosiTion</span>@Model.HomeInfo_Xq_Name</p>
                            <p>房屋类型：<span>@Model.HomeInfo_Type</span></p>
                            <p>房型：<span>@Model.HomeInfo_HouseType</span></p>
                            <p>房屋面积：<span>@Model.HomeInfo_Area</span></p>
                            @:房屋信息：出租
                            <p>价格：<span>@Model.HomeInfo_AvgPrice</span>/月</p>
                            <p>介绍：@Model.HomeInfo_IntroDuce</p>
                        }
                        else if (Model.HomeInfo_InfoType == 3)
                        {
                            <h3>房屋的具体信息</h3>
                            <input id="Hidden1" value="@Model.HomeInfo_Id" type="hidden" />
                            <img src="/Images/@Model.HomeInfo_PhotoPath" alt="Alternate Text" />
                            <p>联系人：<span>@Model.HomeInfo_Contact</span></p>
                            <p>联系方式：<span>@Model.HomeInfo_Phone</span></p>
                            <p>房屋地点：<span>@Model.HomeInfo_PosiTion</span>@Model.HomeInfo_Xq_Name</p>
                            @:房屋信息：楼盘
                            <p>介绍：@Model.HomeInfo_IntroDuce</p>
                        }
                    </div>
                </div>
                <div class="col-md-3 blog-grid1">
                    <div class="feature">
                        <h4>楼盘广告</h4>
                        @foreach (var item in homes)
                        {
                            <div class="feature-top top2">
                                <img src="/Images/@item.HomeInfo_PhotoPath" class="img-responsive" alt="/">
                                <h5>@item.HomeInfo_PosiTion</h5>
                                <p>@item.HomeInfo_IntroDuce &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="/HomeInfo/XiangQingIndex?Id=@item.HomeInfo_Id">知道更多</a></p>
                            </div>
                        }
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>

