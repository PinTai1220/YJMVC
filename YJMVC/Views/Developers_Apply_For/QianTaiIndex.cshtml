@model List<YJMVC.Models.HomeInfoModel>
@{
    ViewBag.Title = "QianTaiIndex";
    Layout = "~/Views/Shared/_QianTaiView.cshtml";
}

<div class="banner-section">
    <div class="container">
        <h2>广告推广</h2>
    </div>
</div>
<!---banner--->
<div class="content">
    <div class="blog-section">
        <div class="container">
            <div class="blog-grids">
                <div class="col-md-9 blog-grid">
                    @foreach (var item in Model)
                    {
                            <div class="blog">
                                <h3><a href="single.html">@item.HomeInfo_Xq_Name</a></h3>
                                <a href="/HomeInfo/XiangQingIndex"><img src="/Images/@item.HomeInfo_PhotoPath" class="img-responsive" alt="" /></a>
                                <p>@item.HomeInfo_IntroDuce</p>
                                <a href="/HomeInfo/XiangQingIndex" class="button5 hvr-shutter-out-horizontal">知道更多</a>
                            </div>
                    }
                </div>
                <div class="col-md-3 blog-grid1">
                    <div class="feature">
                        <h4>特色房屋</h4>
                        @foreach (var item in Model)
                        {
                            <div class="feature-top top2">
                                <img src="/Images/@item.HomeInfo_PhotoPath" class="img-responsive" alt="/">
                                <h5>@item.HomeInfo_PosiTion</h5>
                                <p>@item.HomeInfo_IntroDuce<a href="/HomeInfo/XiangQingIndex?Id=@item.HomeInfo_Id">知道更多</a></p>
                            </div>
                        }
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>

